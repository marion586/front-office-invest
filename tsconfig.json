{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "module": "esnext",
        "strict": true,
        "types": ["vite/client"],
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "/@/*": [
                // / to begin with.
                "src/*"
            ]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.js"],
    "exclude": ["node_modules"]
}
